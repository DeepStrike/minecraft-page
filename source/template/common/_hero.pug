  +b.DIV.hero
    +e.DIV.inner
      +b.UL.side-menu
        +e.LI.item  
          +e.A(href="#") Мир Minecraft
          +e.UL.childs
            +e.LI.child 
              +e.A(href="#") Блоки
            +e.LI.child 
              +e.A(href="#") Мобы
            +e.LI.child 
              +e.A(href="#") Стурктуры
            +e.LI.child 
              +e.A(href="#") Биомы
            +e.LI.child 
              +e.A(href="#") Миры
