          +e.A(href="#") Industrial craft
        +e.LI.item
          +e.A(href="#") OptiFine
        +e.LI.item
          +e.A(href="#") Forge
        +e.LI.item
          +e.A(href="#") TooManyItems
        +e.LI.item
          +e.A(href="#") RailCraft
      +e.content
        +e.H3.title Подключайся и играй на наших серверах!
        +e.slider
          +b.IMG(src="./assets/img/slider.jpg")
